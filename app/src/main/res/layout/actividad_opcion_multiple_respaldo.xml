<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white"

    >

    <Button
        android:id="@+id/respuesta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ejercicios"
        android:layout_alignStart="@+id/ejercicios"
        android:layout_below="@+id/ejercicios"
        android:background="#FFFFFF"
        android:text="1^5 x^3"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/respuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ejercicios"
        android:layout_alignRight="@+id/ejercicios"
        android:layout_below="@+id/ejercicios"
        android:background="#FFFFFF"
        android:text="15 x^2 – 4"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/respuesta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/respuesta1"
        android:layout_alignStart="@+id/respuesta1"
        android:layout_below="@+id/respuesta1"
        android:layout_marginTop="49dp"
        android:background="#FFFFFF"
        android:text="125 x^2 - 4"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/respuesta4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/respuesta2"
        android:layout_alignRight="@+id/respuesta2"
        android:layout_alignTop="@+id/respuesta3"
        android:background="#FFFFFF"
        android:text="15 x^4 – 4x^2"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="La derivada de f(x) = 5x^3 – 4x"
        android:id="@+id/ejercicios"
        android:gravity="center"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiempo_restante"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignRight="@+id/respuesta4"
        android:layout_alignEnd="@+id/respuesta4"
        android:layout_alignLeft="@+id/respuesta3"
        android:layout_alignStart="@+id/respuesta3" />
</RelativeLayout>